# ==================================================
# CONFIGURACIÓN DE SUPABASE
# ==================================================
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_KEY=tu-clave-supabase-anon-key

# ==================================================
# CIFRADO
# ==================================================
# Generar con: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=tu-clave-fernet-base64

# ==================================================
# AUTENTICACIÓN ADMIN
# ==================================================
# Generar con: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY_ADMIN=tu-api-key-admin-segura

# ==================================================
# CONFIGURACIÓN GENERAL
# ==================================================
ENVIRONMENT=development
# development | production

# ==================================================
# CORS - Orígenes permitidos (separados por comas)
# ==================================================
CORS_ORIGINS=http://localhost:3000,https://secret.autopus.es

# ==================================================
# CONFIGURACIÓN DE LA API
# ==================================================
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=Autopus Secret API
API_VERSION=0.1.0

# ==================================================
# LÍMITES Y SEGURIDAD
# ==================================================
MAX_SECRET_SIZE_KB=10
MIN_TTL_MINUTES=5
MAX_TTL_MINUTES=10080
# 10080 minutos = 7 días

# ==================================================
# SCHEDULER
# ==================================================
CLEANUP_INTERVAL_HOURS=1
